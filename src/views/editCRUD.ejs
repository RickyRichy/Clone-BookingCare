<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User Info page</title>
</head>

<body>
  <h2>Edit page</h2>
  <form action="/put-crud" method="POST">
    <div>
      <label for="inputEmail4">First name</label>
      <input type="text" name="firstName" placeholder="First Name" value="<%= userData.firstName %>">
    </div>
    <div>
      <label for="inputPassword4">Last name</label>
      <input type="text" name="lastName" placeholder="Last Name" value="<%= userData.lastName %>">
    </div>
    <div>
      <label for="inputAddress">Address</label>
      <input type="text" id="inputAddress" name="address" placeholder="Address" value="<%= userData.address %>">
    </div>
    
    <div>
      <input name="id" value="<%= userData.id %>" type="text" hidden>
    </div>
    <div>
      <button type="submit">Update</button>
    </div>
  </form>
</body>

</html>